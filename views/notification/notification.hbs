<main>
    <br><br><br><br><br><br>
 <div class="album py-5 bg-light " >
        <div  id="book-container" class="container ">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
          {{#if (equals notofications 0)}}
          <h1>No tienes notoficaciones</h1>
          {{else}}
            {{#each friends as |friend|}}
             {{#if (equals friend.estado "0")}}
                {{#each ../users as |user|}}
                   {{#if (equals friend.usuarioId user.id)}}
                    {{#if (equals friend.FriendId ../../userd.id)}}
                        <div class="col">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body center">
                                    <div class="img-user">
                                    <img src="{{user.img}}" alt="{{user.usuario}}">
                                    </div>
                                    <h3 class="card-title">{{user.usuario}}</h3>
                                    <div class="row">
                                    <div class="col-6">
                                <form method="POST" id="form-delete-book" action="/aceptfriend">
                                    <input type="hidden" name="friendId" value= "{{friend.id}}" />
                                    <input type="hidden" name="frId" value= "{{friend.usuarioId}}" />
                                    <input type="hidden" name="userId" value= "{{../../userd.id}}" />
                                    <div class="btn-center2">
                                    <button type="submit"  class="btn btn-outline-success me-3 delete-book">Aceptar</button> 
                                    </div>
                                </form>   
                                </div>
                                <div class="col-6">
                                  <form method="POST" id="form-delete-book" action="/denyfriend">
                                    <input type="hidden" name="friendId" value= "{{friend.id}}" />
                                    <div class="btn-center2">
                                    <button type="submit"  class="btn btn-outline-danger me-3 delete-book">Rechazar</button> 
                                    </div>
                                </form> 
                                </div>
                                </div>   
                            </div>
                        </div>
                {{/if}}  
              {{/if}}
            {{/each}}
           {{/if}}
         {{/each}}
        {{/if}}
          </div>
        </div>
    </div>
</main>