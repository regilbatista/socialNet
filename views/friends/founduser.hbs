<main>
<div class="row">
  <div id="container-html" class="col-8 offset-2">
  <div class="mt-3">
 <div class="col-md-6">
              <form method="POST"  action="/foundfriend" class="form-inline">
              <div class="row">
                  <div class="col-10">  
                  <h2> Buscar amigos</h2> 
                 
                  <input type="text" class="form-control" placeholder="Ejemplo: user..." name="user" value= ""  required/>
                  </div>
                  <div class="col-2 mt-5">
                  <button type="submit" class="btn  btn-outline-secondary me-3 ">Buscar</button> 
                  </div>
              </div>  
            </form> 
          </div>
        </div>
      </div>
    </div>
    <br><br><br>
 {{#if foundedFriend}}
 <div class="album py-5 bg-light " >
        <div  id="book-container" class="container ">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
              
                {{#each users as |user|}}
                  {{#if (equals user.id ../userd.id)}}
                  

                  {{else}}
                       {{#if (equals user.estado "0")}}

                       {{else}}
                              <div class="col">
                                  <div class="card" style="width: 18rem;">
                                      <div class="card-body center">
                                          <div class="img-user">
                                            <img src="{{user.img}}" alt="{{user.usuario}}">
                                          </div>
                                          <h3 class="card-title">{{user.usuario}}</h3>
                                          <form method="POST" id="form-delete-book" action="/addfriend">
                                          <input type="hidden" name="friendId" value= "{{user.id}}" />
                                          <input type="hidden" name="userId" value= "{{../userd.id}}" />
                                          <div class="btn-center2">
                                          <button type="submit"  class="btn btn-outline-primary me-3 delete-book">Agregar</button> 
                                          </div>
                                          </form>  
                                        </div> 
                                      
                                      </div>
                              </div>
                          {{/if}}  
                    {{/if}}  
              {{/each}}
           </div>
        </div>
    </div>
    {{else}}
    <H1>Usuario no encontrado</H1>
{{/if}}
</main>